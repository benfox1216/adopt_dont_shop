<%= link_to 'Shelters', "/shelters", method: :get %>
<%= link_to 'All Pets', "/pets", method: :get %>

<h1><%= @pet.name %></h1>
<img src= "<%= @pet.image %>" alt="Cute Doggo" height="42" width="42">

<ul>
  <li><p><%= @pet.description %></li>
  <li><%= @pet.approximate_age %></li>
  <li><%= @pet.sex %></li>
  <li><%= @pet.status %></li>
  <li><%= link_to "#{@pet.shelter}", "/shelters/#{@pet.shelter_id}", method: :get %></li>
</ul>

<%= link_to 'Update Pet', "/pets/#{@pet.id}/edit", method: :get %><br>
<%= link_to 'Delete Pet', "#{@pet.id}", method: :delete %>