<h3>New Pet</h3>
<%= link_to 'Shelters', "/shelters", method: :get %>
<%= link_to 'Pets', "/pets", method: :get %>

<p>*All Fields Required</p>
<%= form_tag "/shelters/#{@shelter_id}/pets" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %><br>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %><br>
  <%= label_tag :image %>
  <%= text_field_tag :image, "url only" %><br>

  <%= submit_tag 'Add Pet' %>
<% end %>